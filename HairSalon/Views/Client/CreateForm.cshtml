<head>
    <title>The Hair Salon</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link rel="stylesheet" type="text/css" href="~/css/styles.css" />
</head>
<body>
  <div class="container">
    <h1>Add a New Client</h1>
    <form action="/Client/Add" method="post">
      <label for="newname">Name</label>
      <input type="text" name="newname" id="newname" class="form-control" required>
      <label for="newphone">Phone#</label>
      <input type="text" name="newphone" id="newphone" class="form-control" required>
      <label for="newstylist">Select Stylist</label>
      <select name="newstylist" required>
      @foreach(var person in Model)
      {
        <option value="@person.GetId()">@person.GetName()</option>
      }
      </select>
      <button class="btn btn-success" type="submit">Add New Client</button>
    </form>

  </div>
</body>
